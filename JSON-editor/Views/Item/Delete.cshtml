@model JSONEditor.Models.Item

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this Item?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        
        <dt>
            Start Time
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ItemStart)
        </dd>
        <dt>
            End Time
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ItemEnd)
        </dd>
        <dt>
            Title
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ItemTitle)
        </dd>
        <dt>
            Description
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ItemDescription)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ItemId" />
        <input type="hidden" name="EventId" id="EventId" value="@ViewBag.EventId" />
        <input type="hidden" name="AgendaId" id="AgendaId" value="@ViewBag.AgendaId" />
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a asp-controller="Home" asp-action="Index">Back to List</a>
        </div>
    </form>
</div>
